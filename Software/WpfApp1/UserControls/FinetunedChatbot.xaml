<UserControl x:Class="Presentation_Layer.UserControls.FinetunedChatbot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation_Layer.UserControls"
             mc:Ignorable="d" d:DesignWidth="800" Height="650">
    <DockPanel Margin="10">
        <TextBox x:Name="OutputTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" DockPanel.Dock="Top" Height="550"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBox x:Name="InputTextBox" Width="600" Margin="0,0,10,0" Height="55"/>
            <Button Content="Send" Width="100" Click="SendButton_Click" Height="55"/>
        </StackPanel>
    </DockPanel>
</UserControl>
